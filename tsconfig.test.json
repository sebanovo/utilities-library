{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": "./tests",
    "noEmit": true,              /* No generar JS, solo type-check */
    "declaration": false,        /* No generar .d.ts */
    "outDir": "./dist/tests",    /* Opcional, si quieres compilar tests */
    "esModuleInterop": true,
    "isolatedModules": true
  },
  "include": ["tests/**/*.ts"]
}
